{
  "name": "next-pro-editor",
  "version": "0.2.0",
  "description": "App for becoming Pro Editor",
  "main": "electron/main.js",
  "scripts": {
    "react": "cd client && npm run start",
    "server": "nodemon server/index.js",
    "electron": "electron electron/main.js",
    "start": "electron electron/main.js",
    "dev": "concurrently \"npm run react\" \"npm run electron\"",
    "download-binaries": "node scripts/download-binaries.js",
    "prebuild": "npm run download-binaries",
    "build": "npm run prebuild && cd client && npm run build",
    "build-app": "node scripts/build-app.js",
    "build-release": "node scripts/build-release.js",
    "build-release-all": "node scripts/build-release.js --all-platforms",
    "build-release-win": "node scripts/build-release.js --platform win32",
    "build-release-mac": "node scripts/build-release.js --platform darwin",
    "build-release-linux": "node scripts/build-release.js --platform linux",
    "postinstall": "npm run download-binaries"
  },
  "author": "aldimenur",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-packager": "^17.1.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "extraResources": [
      {
        "from": "electron/binaries",
        "to": "binaries",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
